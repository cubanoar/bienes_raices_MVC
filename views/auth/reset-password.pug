extends ../layout/index.pug

block contenido 
    .py-5
        h1.my-10.text-center.text-4xl.font-black.text-indigo-500 Bienes
            span.font-normal.text-neutral-900 Raices 
        h2.text-center.text-2xl.font-extrabold #{pagina}
        .mt-4.mx-auto.max-w-md
            .bg-white.pt-8.px-4.shadow-md.rounded-md
                form(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    img.block.w-42.h-24.my-4.mx-auto(src="/img/lost_pass.svg", alt="registro_img")
                    .mb-3 
                        label.block.text-gray-600.text-sm.uppercase.font-bold.mb-1(for="password") Password 
                        input#nombre.px-3.py-1.w-full.rounded-xl.bg-slate-200.outline-0(type="password", name="password" placeholder="********")
                        if (!passValuesChecked)
                            .w-full 
                            p.text-red-500.text-sm La contraseña debe tener entre 8 y 16 caracteres, al menos un dígito, al menos una minúscula y al menos una mayúscula. NO puede tener otros símbolos.
                    .mb-3 
                        label.block.text-gray-600.text-sm.uppercase.font-bold.mb-1(for="repetir_password") Confirmar Password 
                        input#nombre.px-3.py-1.w-full.rounded-xl.bg-slate-200.outline-0(type="password", name="repetir_password" placeholder="********")  
                        if (errorRepetirPassword)
                            .w-full 
                            p.text-red-500.text-sm Las contraseñas no coinciden
                    input.w-full.bg-indigo-500.text-white.text-xl.rounded-md.font-semibold.cursor-pointer(type="submit" value="Enviar" class="hover:bg-indigo-700 mb-4")