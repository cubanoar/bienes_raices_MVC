extends ../layout/index.pug

block contenido 
    .py-5
        h1.my-10.text-center.text-4xl.font-black.text-indigo-500 Bienes
            span.font-normal.text-neutral-900 Raices 
        h2.text-center.text-2xl.font-extrabold #{pagina}
        .mt-4.mx-auto.max-w-md
            .bg-white.pt-8.px-4.shadow-md.rounded-md
                form(action="recuperar-password", method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    img.block.w-42.h-24.m-auto(src="/img/lost_pass.svg", alt="registro_img")
                    if msgError
                        .text-center
                            p.text-red-800.bg-red-200.border.border-red-800.animation-pulse.my-2 #{msgError}
                    .mb-3 
                        label.block.text-gray-600.text-sm.uppercase.font-bold.mb-1(for="email") Email 
                        input#email.px-3.py-1.w-full.rounded-xl.bg-slate-200.outline-0(type="email", name="email" placeholder="tuemail@dominio.com")  
                        if (errorEmail || !emailValuesChecked)
                                .w-full 
                                p.text-red-500.text-sm Email inválido
                                p.text-red-500.text-sm Por el momento solo GMAIL o YAHOO
                    input.w-full.bg-indigo-500.text-white.text-xl.rounded-md.font-semibold.cursor-pointer(type="submit" value="Enviar" class="hover:bg-indigo-700")
                div(class='flex items-center justify-between mt-4 py-4 text-xs')
                    a(href="login") ¿Ya tienes Cuenta? 
                    a(href="registro") ¿No tienes Cuenta?